<h1>Books</h1>

<table>

 <tr>
  <th>Title</th>
  <th>Body</th>
 </tr>

 <% @books.each do |book| %>

 <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to "Show", book_path(book.id) %></td>
  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
  <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
 </tr>

 <% end %>

</table>

<!---->
<h2>New book</h2>

<!--エラーメッセージ-->
<% if @book.errors.any? %>
 <div id="error">
  <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>

  <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li>
      <%= message %>
     </li>
     <% end %>
  </ul>
 </div>
<% end %>


<!--投稿機能-->

<%= form_with model: @book, url: "/books", method: :post, local:true do |f| %>

<div class="field">
<label for="book_title">Title</label>
<%= f.text_field :title %>
</div>

<div class="field">
<label for="book_body">Body</label>
<%= f.text_area :body %>
</div>

<div class="actions">
<%= f.submit "Create Book" %>

<% end %>

