<h1>Books</h1>


<p>Title</p>
<p>Body</p>

<% @books.each do |book| %>

<span><%= book.title %></span>

<span><%= book.body %></span>

<%= link_to "Show", "/books/:id" %>
<%= link_to "Edit", "/books/:id/edit" %>
<%= link_to "Destroy", "/books/:id" %>


<% end %>

<!---->

<%= form_with model: @book, url: "/books", method: :post, local:true do |f| %>

<h2>New book</h2>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit "Create Book" %>

<% end %>